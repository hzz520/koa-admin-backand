    "@prisma/client": "5.22.0",
    "@types/fs-extra": "^11.0.4",
    "@types/koa": "^2.15.0",
    "axios": "^1.7.9",
    "cos-nodejs-sdk-v5": "2.12.4",
    "ctrl-it": "^1.2.0",
    "dayjs": "^1.11.12",
    "decimal.js": "^10.4.3",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "i18next": "^23.16.5",
    "is-type-of": "^1.1.0",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.15.3",
    "koa-easy-websocket": "^1.0.5",
    "koa-jwt": "^4.0.4",
    "koa-router": "^12.0.1",
    "koa-socket-session": "1.1.0",
    "koa-socket.io": "1.0.1",
    "koa-static": "^5.0.0",
    "koa-swagger-decorator": "^2.2.1",
    "koa-websocket": "^7.0.0",
    "log4js": "^6.9.1",
