{
  "name": "koa",
  "version": "1.0.0",
  "description": "node中间层",
  "main": "src/app.js",
  "scripts": {
    "generate": "prisma db push && prisma db execute --file prisma/init.sql --schema prisma/schema.prisma && prisma generate && ts-node ./scripts/generate.ts",
    "migrate": "prisma migrate dev --name init && npm run generate",
    "build": "tsc",
    "start": "cross-env NODE_ENV=local nodemon ./src/app.ts",
    "serve": "tsc && ecosystem.config.js --env production",
    "stop": "pm2 stop dist/app.js",
    "pm2": "pm2 start ecosystem.config.js --env production",
    "prepare": "husky install && yarn generate"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^6",
